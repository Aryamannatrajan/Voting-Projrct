    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
    // Creating a new directory for storing images
        File imageDir = new File("Images");
            
        boolean creation = imageDir.mkdir();
            
        if (creation) 
        {
            System.out.println("Directory created");
        } 
        else 
        {
            System.out.println("Directory not created");
        }
        
        for(int i=0; i< 10; i++)
        {
        try {
            Socket s = new Socket("127.0.0.1",1234);
            
            BufferedImage b1 = ImageIO.read(ImageIO.createImageInputStream(s.getInputStream()))
            
            ImageIO.write(b1, "jpg", new File(System.getProperty("user.dir")+"\\Images\\image"+i+".jpg"));
            
            
            
        } catch (IOException ex) 
        {
            Logger.getLogger(CL1.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
    }//GEN-LAST:event_jButton1ActionPerformed

